<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MorraCinese"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/verde"
        android:layout_marginTop="25dp"
        android:textSize="35dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/carta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carta"
            android:onClick="mossaGiocatore"/>

        <ImageButton
            android:id="@+id/sasso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sasso"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="mossaGiocatore"/>

        <ImageButton
            android:id="@+id/forbici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forbici"
            android:onClick="mossaGiocatore"/>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giocatore"
            android:layout_gravity="center"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mossa PC"
            android:layout_gravity="center"
            android:textSize="25dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vuota"
            android:layout_gravity="center"
            android:id="@+id/mossaGiocatore"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vuota"
            android:layout_gravity="center"
            android:id="@+id/mossaPC"/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:id="@+id/punti"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:id="@+id/messaggio"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_gravity="center"
            android:onClick="reset"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:layout_gravity="center"
            android:onClick="Return"
            android:layout_marginTop="10dp"/>
    </GridLayout>


</LinearLayout>
